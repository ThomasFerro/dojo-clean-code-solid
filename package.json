  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThomasFerro/dojo-clean-code-solid.git"
  },
  "keywords": [
    "dojo",
    "clean-code",
    "typescript",
    "ts",
    "node",
    "express"
  ],
